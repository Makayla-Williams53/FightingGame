<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/opponentHealthView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.35"
        android:background="#169385"
        android:fontFamily="sans-serif-black"
        android:gravity="end|center_vertical"
        android:text="Opponent Health: 100"
        android:textColor="#000000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/userCharacterView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/arrow_down_float" />

        <ImageView
            android:id="@+id/opponentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/arrow_up_float" />
    </LinearLayout>


    <TextView
        android:id="@+id/userHealthView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.35"
        android:background="#169385"
        android:fontFamily="sans-serif-black"
        android:gravity="start|center_vertical"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="User Health: 100" />

    <Button
        android:id="@+id/attackButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:backgroundTint="#550277"
        android:onClick="attackClick"
        android:text="Button" />

    <Button
        android:id="@+id/specialButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:backgroundTint="#550277"
        android:text="Special Attack" />

    <Button
        android:id="@+id/blockButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#550277"
        android:layout_weight="1.2"
        android:onClick="blockClick"
        android:text="Block" />


</LinearLayout>